@{
    ViewBag.Title = "ProductService";
    Layout = "~/Views/Shared/View1.cshtml";
}
<style>
    #productinfo{
        width:1000px;
        height:300px;
        margin:auto;
    }
    /*产品服务*/
    #productimg{
        width:480px;
        height:220px;
    }
    #productdesc{
        line-height:30px;
        margin-left:60px;
    }
    #productdesc span{
        color:#666666;
    }
    /*产品系统*/
    #productsystem{
        width:1000px;
        height:350px;
        margin:auto;
        margin-top:20px;
        background-color:#efefef;
    }
    .systemimg{
        width:100px;
        height:100px;
        padding:10px 0px;
    }
    #productsystem tr td b{
        list-style:none;
        line-height:30px;
        font-size:18px;
        color:#0057be;
    }

    #productsystem ul li span{
        line-height:30px;
    }
    /*产品展示*/
    #productshow{
        width:1000px;
        height:500px;
        margin:auto;
    }
    /*品牌优势*/
    #productadvantage{
        width:1000px;
        height:300px;
        margin:auto;
    }
    #productadvantage img{
        width:240px;
        height:260px;
    }
</style>
@*产品服务*@
<table id="productinfo" border="1">
    <tr style="text-align:center;">
        <td>
            <h3 style="color:#0057be;">产品服务</h3>
            <span style="font-size:14px;">PRODUCT SERVICE</span>
        </td>
    </tr>
    <tr style="height:30px;">
        <td></td>
    </tr>
    <tr>
        <td>
            <table id="productcarousel">
                <tr>
                    <td>
                        <div id="productimg" style="background: url('../../image/serve_14.png') 100% 100%;"></div>
                    </td>
                    <td>
                        <table id="productdesc">
                            <tr style="text-align:center;">
                                <td><h4 style="margin:auto;">网上阅卷服务</h4></td>
                            </tr>
                            <tr>
                                <td><b>信息卡制作</b></td>
                            </tr>
                            <tr>
                                <td><span>完备质量检验体系保障答题卡印刷/裁剪精准无误</span></td>
                            </tr>
                            <tr>
                                <td><b>数据扫描产品</b></td>
                            </tr>
                            <tr>
                                <td><span>独有智能视觉算法及图像采集处理技术</span></td>
                            </tr>
                            <tr>
                                <td><b>网上阅卷系统</b></td>
                            </tr>
                            <tr>
                                <td><span>一卷多评/一致性检测/复评等多种方式,安全性高，保密性强</span></td>
                            </tr>
                        </table>
                        
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
