@{
    ViewBag.Title = "Index";
}

@{
    ViewBag.Title = "Login";
}
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Areas/Login/css/styles.css" rel="stylesheet" />
    <!--[if IE]>
        <script src="http://libs.baidu.com/html5shiv/3.7/html5shiv.min.js"></script>
    <![endif]-->
</head>
<body>
        <div class="jq22-container" style="padding-top:100px">
            <div class="login-wrap">
                <div class="login-html">
                    <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign In</label>
                    <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"> </label>
                    <div class="login-form">
                        <div class="sign-in-htm">
                            <div class="group">
                                <label for="user" class="label" name="UserName" onfocus="">用户名</label>
                                <input id="user" type="text" class="input">
                            </div>
                            <div class="group">
                                <label for="pass" class="label" name="UserPwd">密码</label>
                                <input id="pass" type="password" class="input" data-type="password">
                            </div>
                            <div class="group">
                                <label for="validate" class="label">验证码</label>
                                <input id="validate" type="text" class="input" style="width:60%;">
                            </div>

                            <div class="group">
                                <input id="check" type="checkbox" class="check" checked>
                                <label for="check"><span class="icon"></span> 记住密码</label>
                            </div>

                            <div class="group">
                                <input type="submit" class="button" name="LoginButton" value="登录">
                            </div>
                            <div class="hr"></div>
                            <div class="foot-lnk">
                                <a href="#forgot">欢迎登录北京世纪互联后台管理系统</a>
                                <a href="Admin/AdminHome/Home">首页</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</body>
